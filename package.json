{
  "name": "quality-platform",
  "version": "1.0.0",
  "description": "A reusable quality platform for accelerating projects with built-in QA/QE best practices and ISTQB alignment",
  "private": true,
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "scripts": {
    "dev": "node dev-start.js",
    "dev:clean": "node dev-start.js",
    "dev:stop": "node dev-stop.js",
    "dev:reset": "node dev-stop.js --all && timeout /t 2 && node dev-start.js",
    "db:seed": "npx prisma db seed",
    "quality:check": "nx run tools:quality-check",
    "quality:report": "nx run tools:quality-report",
    "tools:build": "nx build tools",
    "tools:test": "nx test tools",
    "tools:lint": "nx lint tools",
    "context:summary": "node scripts/context-helper.js summary",
    "context:feature": "node scripts/context-helper.js feature",
    "context:git": "node scripts/context-helper.js git",
    "test": "node scripts/test-runner.js",
    "test:unit": "nx run-many -t test --coverage",
    "test:integration": "nx run api-e2e:test",
    "test:e2e": "nx run web-e2e:test",
    "test:contract": "nx run api:test --testNamePattern=\"Contract\"",
    "test:coverage": "node scripts/coverage-aggregator.js",
    "test:coverage:serve": "node scripts/coverage-aggregator.js && npx http-server coverage/merged -p 8080",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:coverage"
  },
  "devDependencies": {
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.1.6",
    "@nx/devkit": "21.5.2",
    "@nx/jest": "^21.5.2",
    "@nx/js": "21.5.2",
    "@nx/next": "^21.5.2",
    "@nx/node": "21.5.2",
    "@nx/playwright": "21.5.2",
    "@nx/web": "21.5.2",
    "@nx/webpack": "21.5.2",
    "@playwright/test": "^1.36.0",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/jest": "^30.0.0",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "20.19.9",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.35.0",
    "http-server": "^14.1.1",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "postcss": "^8.5.6",
    "prettier": "^2.6.2",
