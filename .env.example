# Environment Configuration Example
# Copy this file to .env and update with your values

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# Database Configuration
DB_USER=quality_user
DB_PASSWORD=quality_pass
DB_NAME=quality_platform
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# API Configuration
API_PORT=3001
API_BASE_URL=http://localhost:${API_PORT}

# Web Application Configuration
WEB_PORT=4200
NEXT_PUBLIC_API_URL=http://localhost:${API_PORT}/api

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# Security Configuration
CORS_ORIGIN=http://localhost:4200,http://localhost:3000
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15m
BCRYPT_ROUNDS=10

# Monitoring (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=

# Docker Registry (Production)
DOCKER_REGISTRY=your-registry.com/quality-platform
VERSION=latest

# Deployment Configuration (Production)
API_REPLICAS=2
WEB_REPLICAS=2

# Development Tools
PRISMA_STUDIO_PORT=5555
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@quality-platform.com
PGADMIN_PASSWORD=admin

# AWS Configuration (Optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@quality-platform.com

# Feature Flags
ENABLE_REDIS_CACHE=true
ENABLE_RATE_LIMITING=true
ENABLE_SWAGGER_UI=true
ENABLE_MONITORING=false